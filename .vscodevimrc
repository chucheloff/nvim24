let mapleader = " "

nnoremap <leader>pf <C-F>
nnoremap <leader>n :NERDTreeFocus<CR>
nnoremap <leader>nt :NERDTreeToggle<CR>

" Disable arrow keys (Normal mode)
nnoremap <left> <nop>
nnoremap <down> <nop>
nnoremap <up> <nop>
nnoremap <right> <nop>

" Disable arrow keys (Insert mode)
" inoremap <left> <nop>
" inoremap <down> <nop>
" inoremap <up> <nop>
" inoremap <right> <nop>

" Disable arrow keys (Visual mode)
vnoremap <left> <nop>
vnoremap <down> <nop>
vnoremap <up> <nop>
vnoremap <right> <nop>

" Move things around in visual mode
vnoremap J :m '>+1<CR>gv=gv
vnoremap K :m '<-2<CR>gv=gv

" Copy-paste conveniently between vim buffer and clipboard
nnoremap <leader>y "+y
vnoremap <leader>y "+y
nnoremap <leader>Y "+Y

nnoremap <leader>P "+P

nnoremap <leader>d "_d 
vnoremap <leader>d "_d 

vnoremap <leader>r y:/<C-r>"<CR>:%s///gc<left><left><left>

" line insertions
nnoremap <silent> <leader>o o<Esc>k
nnoremap <silent> <leader>O O<Esc>j


" Questionable map to escape from primagen
inoremap <C-c> <Esc>

nnoremap <leader>pv :wq<CR>
nnoremap J mzJ`z
nnoremap <C-d>  <C-d>zz
nnoremap <C-u> <C-u>zz
nnoremap n nzzzv
nnoremap N Nzzzv
nnoremap Q <nop>
nnoremap <C-j> :cprev<CR>zz
nnoremap <leader>k :lnext<CR>zz
nnoremap <leader>j :lprev<CR>zz
nnoremap <leader>s :%s/\<<C-r><C-w>\>/<C-r><C-w>/gI<Left><Left><Left>
vnoremap <leader>s :%s/\<<C-r><C-w>\>/<C-r><C-w>/gI<Left><Left><Left>
nnoremap <leader>mr :CellularAutomaton make_it_rain<CR>

" SETS CONFIG 

set nohlsearch
set relativenumber

